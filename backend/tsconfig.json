{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "./node_modules/"
  ],
  "include": [
    "./src/"
  ]
}